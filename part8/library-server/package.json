{
  "name": "part8-library-server",
  "main": "./src/index.ts",
  "scripts": {
    "build": "npm run lint && rimraf ./dist && tsc --project ./tsconfig.json",
    "dev": "cross-env NODE_ENV=development nodemon --watch src ./src/index.ts",
    "lint": "eslint .",
    "start": "npm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "types": "tsc --noEmit --project ./tsconfig.json"
  },
  "dependencies": {
    "apollo-server": "3.6.7",
    "dotenv": "16.0.0",
    "graphql": "16.4.0",
    "mongoose": "6.3.1"
  },
  "devDependencies": {
    "@types/node": "17.0.29",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "cross-env": "7.0.3",
    "eslint": "8.14.0",
    "nodemon": "2.0.15",
    "rimraf": "3.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  }
}
